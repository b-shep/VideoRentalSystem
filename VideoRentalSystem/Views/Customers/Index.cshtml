@model List<VideoRentalSystem.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model == null)
{
    <h4>We have no customers...</h4>
}
else
{
    <div class=" table-responsive">
        <table>
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Discount Rate</th>
                </tr>
            </thead>
        @foreach (VideoRentalSystem.Models.Customer customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Detail", "Customers", new { id = customer.Id }, null)</td> 
                <td>@customer.MembershipType.DiscountRate%</td>
            </tr>
        }
        </table>
    </div>
}

